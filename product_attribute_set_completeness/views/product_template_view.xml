<odoo>
    <record id="product_template_view_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_attribute_set.product_template_form_view"/>
        <field name="arch" type="xml">
            <separator name="attributes_placeholder" position="before">
                <div invisible="attribute_set_not_completed_ids == []">
                    <group>
                        <label for="attribute_set_not_completed_ids" string="Not completed attributes"/>
                        <field name="attribute_set_not_completed_ids" nolabel="1" widget="many2many_tags"/>
                    </group>
                    <separator style="border-bottom-style: inset;"/>
                </div>
            </separator>
            <field name="attribute_set_id" position="after">
                <field name="attribute_set_id" invisible="1"/>
                <field invisible="attribute_set_id == False" name="attribute_set_completion_state" options="{'classes': {'complete': 'success', 'not_complete': 'danger'}}" widget="label_selection"/>
                <field invisible="attribute_set_id == False or attribute_set_completion_state == 'complete'" name="attribute_set_completion_rate"/>
                <field invisible="1" name="attribute_set_completeness_ids"/>
                <separator/></field></field>
    </record>
    <record id="product_template_search_view" model="ir.ui.view">
        <field name="name">product.template.search (in product_attribute_set_completeness)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <filter name="filter_to_purchase" position="after">
                <separator/>
                <filter domain="[('attribute_set_completion_state','=','complete')]" name="filter_complete" string="Complete"/>
                <filter domain="[('attribute_set_completion_state', '=', 'not_complete')]" name="filter_not_complete" string="Not Complete"/>
            </filter></field>
    </record>
</odoo>
